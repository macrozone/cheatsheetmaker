
@media screen
	.sheetContainer
		border: 1px dashed black
		margin: 50px

.loading
	text-align: center
	img 
		width: 275px
.inline
	display: inline;
.clear
	clear: both;
.navigation
	position: absolute;
	top: 8px
	left: 58px
.sheetContainer
	width: 1400px
.sheet
	
	
	h1
		font-size: 24px
		margin-top: 0px
	h2 
		font-size: 20px
	h3 
		font-size: 16px
	h4
		font-size: 14px
		margin-bottom: 4px
	h5
		font-size: 12px
		margin-bottom: 4px

	
		
	font-size: 12px

	-webkit-column-count:3; /* Chrome, Safari, Opera */
	-moz-column-count:3; /* Firefox */
	column-count:3;
	-webkit-column-gap: 3em
	-moz-column-gap: 3em
	column-gap: 3em
	
	
	
	margin: 20px

	.spacer
		
		width: 100%;
		height: 100px;

	.editor
		width: 100%
		z-index: 100
		border: 1px dashed
		box-sizing: border-box
		background-color: rgba(255,255,255,0.9)
		padding: 8px

	.editor-tail
		height: 50px
		position: relative
	.element
		-webkit-column-break-inside:avoid;
		-moz-column-break-inside:avoid;
		-o-column-break-inside:avoid;
		-ms-column-break-inside:avoid;
		column-break-inside:avoid;
		box-sizing: border-box
		cursor: cell
		position: relative
		margin-bottom: 10px
		img
			max-width: 100%
		.editor-element
			z-index: 110
			display: none;
			position: absolute
			top: 0px
			left: 0px
			right: 0px
			bottom: 0px
	.element:hover
		background-color: #fafafa
	.element.editing
		min-height: 50px
		.content 
			-webkit-filter: blur(4px);
		.editor-element
			display: block

	.author
		margin-top: 32px
		border-top: 1px solid
		padding-top: 8px
		padding-bottom: 8px
		font-style: italic



.dimmer
	pointer-events: none
	z-index: 10
	position: fixed
	top: 0px
	bottom: 0px
	left: 0px
	right: 0px
	background-color: black
	opacity: 0
	transition: 0.3s ease-out

body.editing
	.dimmer
		opacity: 0.1


